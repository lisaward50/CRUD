<% include ./partials/header %>

<div class="container main">
  <br/>
  <h1>Edit <%= whisky.name %></h1>
  <br/>
  <form action="/whiskies/<%= whisky._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[name]" value="<%= whisky.name %>">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[image]" value="<%= whisky.image %>">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[origin]" value="<%= whisky.origin %>">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[type]" value="<%= whisky.type %>">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[summary]" value="<%= whisky.summary %>">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[description]" value="<%= whisky.description %>">
    </div>
    <button class="btn btn-sm btn-outline-info">Submit</button>
  </form>
  <br/>
  <a class="btn btn-sm btn-outline-primary" href="/whiskies">Return to list</a>
</div>
<% include ./partials/footer %>
