<% include ./partials/header %>

<div class="container">
  <br/>
  <h1>Edit <%= whisky.name %></h1>
  <br/>
  <form action="/whiskies/<%= whisky._id %>?_method=PUT" method="POST">
    <input type="text" name="whisky[name]" value="<%= whisky.name %>">
    <input type="text" name="whisky[image]" value="<%= whisky.image %>">
    <input type="text" name="whisky[type]" value="<%= whisky.type %>">
    <input type="text" name="whisky[description]" value="<%= whisky.description %>">
    <button class="btn btn-sm btn-outline-info">Submit</button>
  </form>
  <br/>
  <a class="btn btn-sm btn-outline-primary" href="/whiskies">Return to list</a>
</div>
<% include ./partials/footer %>
