<% include ./partials/header %>

<div class="container main">
  <br/>
  <div class="text-center">
  <h1>Recommended Whiskies</h1>
  </div>
  <br/>
  <div class="row">
    <% whiskies.forEach(function(whisky) { %>
      <div class="col-md-3">
        <img class="bottle-box px-5 py-1" src="<%= whisky.image %>"/>
      </div>
      <div class="col-md-9">
        <h1 class="mb-3"><%= whisky.name %></h1>
        <h5>Origin: &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<%= whisky.origin %></h5>
        <h5>Type: &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<%= whisky.type %></h5>
        <h5 class="mb-4">Summary: &nbsp; &nbsp; &nbsp; &nbsp;<%= whisky.summary %></h5>
        <a class="btn btn-sm btn-outline-primary" href="/whiskies/<%= whisky._id %>">View More Details</a>
    </div>
    <% }); %>
  </div>
  <br/>
  <a class="btn btn-sm btn-outline-info inline-button" href="/whiskies/new">Add New Whisky</a>
</div>

<% include ./partials/footer %>
