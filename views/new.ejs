<% include ./partials/header %>

<div class="container main">
  <br/>
  <h1>Add a New Whisky</h1>
  <br/>
  <form action="/whiskies" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[name]" placeholder="name">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[image]" placeholder="image url">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[origin]" placeholder="origin">
    </div>
    <div class="form-group">
     <input class="form-control" type="text" name="whisky[type]" placeholder="type">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[summary]" placeholder="summary">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="whisky[description]" placeholder="description">
    </div>
    <button class="btn btn-sm btn-outline-info">Submit</button>
  </form>
  <br/>
  <a class="btn btn-sm btn-outline-primary" href="/whiskies">Return to list</a>
</div>

<% include ./partials/footer %>
